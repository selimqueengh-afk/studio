rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allows authenticated users to read and write to the rooms and messages collections
    match /rooms/{roomId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.creatorId;

      match /messages/{messageId} {
        allow read, create: if request.auth != null;
      }
    }
    
    // Allows authenticated users to read the users collection, and create/update their own user document
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }
  }
}
